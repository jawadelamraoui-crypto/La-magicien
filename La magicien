#include <stdio.h>

int main(void) {
    int a, b, c;
    int x, y;

    printf("Entrer a : ");
    scanf("%d", &a);

    printf("Entrer b : ");
    scanf("%d", &b);

    printf("Entrer c : ");
    scanf("%d", &c);

    printf("\nLes solutions de %d*x + %d*y = %d  sont :\n\n", a, b, c);

    int trouve = 0;

    for (x = 0; x <= 31; x++) {
        for (y = 0; y <= 12; y++) {
            if (a * x + b * y == c) {
                printf("x = %d , y = %d\n", x, y);
                trouve = 1;
            }
        }
    }

    if (!trouve) 
        printf("Aucune solution trouvee dans l'intervalle.\n");

    return 0;
}
